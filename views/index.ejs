<%- include('partials/header'); -%>

<body>
  <!-- profile section -->
  <div class="container-fluid" id="introduction-section">
    <div class="profile-container">
      <img id="my-image" class="img-fluid" alt="Kebing Liu Profile" src="./images/myself.png">
      <div class="brief-intro">
        <h1 class="name">Hello, I'm Kebing Liu</h1>
        <p> I am a 3A BMath Data Science Student at University of Waterloo. <br>
          I love learning new stuffs and build from my own ideas! <br></p>
      </div>
      <a href="pdfs/Resume.pdf" class="btn btn-outline-light resume-link" target="_blank"> Checkout My Resume </a>
    </div>
  </div>

  <hr>


  <!-- skills section -->
  <div class="container-fluid" id="skills-section">
    <div class="skills-content-container row text-center">
      <% skills.forEach(function(skillGroup) {%>
      <div class="skill-group align-self-baseline container col col-lg-3 col-md-6 col-sm-6">
        <h2 class="skills-title"> <%= skillGroup.skillName %> </h2>
        <% skillGroup.skillContent.forEach(function(skill) {%>
        <img src="<%= skill.href %>" class="skills-images" alt=<%= skill %>>
        <p> <%= skill.text %> </p>
        <% }); %>
      </div>
      <% }); %>
    </div>
  </div>

  <hr>


  <!-- projects section  -->
  <div class="container-fluid" id="projects-section">
    <div class="row">
      <!-- left side: carousel -->
      <div id="project-carousel" class="carousel slide col col-lg-6 col-md-12 col-sm-12" 
      data-bs-ride="carousel" data-bs-interval="8000">

        <!-- bottom indicators -->
        <div class="carousel-indicators">
          <% projects.forEach(function(project, index) {%>
            <button data-bs-target="#project-carousel" data-bs-slide-to="<%= index %>" aria-label="Slide <%= index %>"></button>
          <% }); %> 
        </div>

        <div class="carousel-inner container">
          <!-- slides -->
          <% projects.forEach(function(project) {%>
            <div class="carousel-item project-item container-fluid">
              <img src="<%= project.imagePath %>" class="carousel-img d-block w-100">
              <h5> <%= project.title %> </h5>
              <p class="project-description"> <%= project.description %> </p>
              
              <!-- bottom part: tech used + code + external link --> 
              <div class="row">
                <div class="col col-4 d-flex justify-content-center">
                  <% project.views.forEach(function(view) {%>
                  <a class="project-btn" aria-label="<%= view.viewName %>" href="<%= view.href %>" target="_blank"> 
                    <img class="view-image" src="<%= view.iconPath %>">
                  </a>
                  <% }); %>     
                </div>

                <div class="col"> <span class="tech-used"> <%= project.tech.join(', ') %> </span>  </div>  
              </div>            
            </div>
          <% }); %>  
        </div>
      </div>
      
      <!-- right side: project title -->
      <div class="project-title-container col col-lg-6 col-md-12 col-sm-12">
        <ul class="project-title-list container">
          <% projects.forEach(function(project, index) {%>
            <li data-bs-target="#project-carousel" data-bs-slide-to="<%= index %>"> 
              <span class="project-title"> <%= project.title %>  </span>
            </li>  
          <% }); %>   
        </ul>
      </div>

    </div>
  </div>
</body>

<%- include('partials/footer'); -%>
